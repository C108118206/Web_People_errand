<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <title>@ViewBag.Title - 人事差勤打卡系統</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        span:hover {
            color: #79ADFC;
        }

        a:hover {
            color: #79ADFC;
        }

        a {
            color: #979797;
        }

        span {
            color: #979797;
        }

        #titlename:hover {
            color: #808080;
        }
    </style>
   
</head>
<body id="body-pd">
    <header class="header" id="header" style="height:80px;">
        <div class="header-toggle newlogo col" id="header-toggle">
            @*
            <div class="row">
                <div class="col align-self-center">
                    <h4 style="margin-left: -15px; font-family: monospace; cursor: pointer; font-size: 30px;">
                        <img class="nav_logo3" src="~/Content/images/S__19546790.jpg" style="cursor: pointer">
                        EIRC
                    </h4>
                </div>

            </div>
            *@
            <div class="row">
                <div class="align-self-center">
                    <img class="nav_logo3" src="~/Content/images/S__19546790.jpg" style="cursor: pointer">
                </div>

                <div class="align-self-center">
                    <span class="nav_logo-name" id="titlename" style="cursor: pointer; margin:0px 0px 0px 10px;">EIRC</span>
                </div>
            </div>
        </div>
        @*
        <div class="row col" style="margin: 0px auto">
            <div class="align-self-center" style="margin: 0px auto">
                <img class="nav_logo3" src="~/Content/images/差勤打卡LOGO6.png" style="margin: 0px auto">
            </div>
        </div>
        *@
        <div class="sidebar-user-picture col">

            <div style="text-align:right;">
                @*&nbsp;<img alt="使用者圖片" src="~/Content/images/user2.png">*@
                <div class="user-name">@Session["name"]</div>
                <div class="user-role">
                    Administrator
                </div>
            </div>
        </div>
    </header>
    <div class="l-navbar" id="nav-bar" style="height:100%">
        <nav class="nav" style="margin:25px 0px 0px 0px;">
            <div>
                @*<a href="@Url.Action("Index","PunchRecords")" class="nav_link  @(Context.Request.Path == "/" ? "active" : "")"><img class="nav_logo2" src="~/Content/images/差勤打卡LOGO2.png"><span class="nav_logo-name">人事差勤打卡系統</span> </a>*@
                <div class="nav_list">
                    <a href="@Url.Action("Index","EmployeeData")" class="nav_link @(Context.Request.Path == "/EmployeeData" ? "active" : "")"> <img class="nav_logo2" src="~/Content/images/user.png"> <span class="nav_name">員工管理</span> </a>
                    <a href="@Url.Action("Index","PunchRecords")" class="nav_link  @(Context.Request.Path == "/PunchRecords" ? "active" : "")"> <img class="nav_logo2" src="~/Content/images/clock.png"><span class="nav_name">打卡紀錄</span> </a>
                    <a href="@Url.Action("Index","TripRecords")" class="nav_link  @(Context.Request.Path == "/TripRecords" ? "active" : "")">  <img class="nav_logo2" src="~/Content/images/portfolio.png"> <span class="nav_name">公出管理</span> </a>
                    <a href="@Url.Action("Index","LeaveRecords")" class="nav_link  @(Context.Request.Path == "/LeaveRecords" ? "active" : "")">  <img class="nav_logo2" src="~/Content/images/contact-form.png"> <span class="nav_name">請假管理</span> </a>
                    @*<a href="@Url.Action("Index","DataExport")" class="nav_link @(Context.Request.Path == "/DataExport" ? "active" : "")">  <img class="nav_logo2" src="~/Content/images/pie-chart.png"> <span class="nav_name">資料匯出</span> </a>*@
                    <a href="@Url.Action("Index","Setting")" class="nav_link @(Context.Request.Path == "/Setting" ? "active" : "")">  <img class="nav_logo2" src="~/Content/images/settings (1).png"> <span class="nav_name">系統設定</span> </a>
                    @if (Session["hash_account"] == null)
                    {
        <a href="@Url.Action("Index","AuthoritySetting")" class="nav_link @(Context.Request.Path == "/AuthoritySetting" ? "active" : "")"> <img class="nav_logo2" src="~/Content/images/file.png"> <span class="nav_name">權限設定</span> </a>}
                    <a href="@Url.Action("Index","OrganizationChart")" class="nav_link @(Context.Request.Path == "/OrganizationChart" ? "active" : "")"> <img class="nav_logo2" src="~/Content/images/organization.png"> <span class="nav_name">組織圖</span> </a>
                </div>
                <a data-toggle="modal" data-target="#exampleModal" class="nav_link">  <img class="nav_logo2" src="~/Content/images/turn-off.png"> <span class="nav_name">登出</span> </a>
            </div>
        </nav>
    </div>
    <div class="modal modal-backdrop-bg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="width: 100%;  ">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="margin-top:150px;">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">確定要登出嗎?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="modal-footer">
                        <button id="Button" name="Button" value="CloseButton" type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                        <button id="DeleteWorkTimeButton" name="DeleteId" type="button" class="btn btn-danger"  onclick="window.location='/Account/index'">確定</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
        <hr / style="margin:15px">
        <footer>
            <div class="row" style="width:100%;height:100%">
                <div class="col-6 align-self-center" style="float:left;text-align:left">
                    <div class="row">
                        <div class="align-self-center">
                            <img class="nav_logo3" src="~/Content/images/差勤打卡LOGO6.png" style="cursor: pointer">
                        </div>  

                        <div class="align-self-center">
                            <span class="nav_logo-name" id="titlename" style="cursor: pointer;margin:0px 0px 0px 10px;">Punch.</span>
                        </div>
                    </div>
                   
                </div>
                
                <div class="col-6" style="float:right;text-align:right">
                    <p>
                        &copy; @DateTime.Now.Year - 人事差勤系統
                    </p>
                    <p>Icons made by <a href="https://www.freepik.com" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>

</body>
</html>
