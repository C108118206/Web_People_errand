<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <title>@ViewBag.Title - 人事差勤打卡系統</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body id="body-pd">
        <header class="header" id="header">
            <div class="header_toggle"> <i class='bi-list' id="header-toggle"></i> </div>
            <div class="sidebar-user-picture">
                <img alt="使用者圖片" src="~/Content/employee.png">
            </div>
            <div>
                <span class="nav_admin-name">使用者名稱</span>
            </div>
        </header>
        <div class="l-navbar" id="nav-bar">
            <nav class="nav">
                <div>
                    <a href="" class="nav_logo"><span class="nav_logo-name" style="margin-left:30px ">人事差勤打卡系統</span> </a>
                    <div class="nav_list">
                        <a href="@Url.Action("Index")" class="nav_link  @(Context.Request.Path == "/" ? "active" : "")"> <i class='bi-clock'></i> <span class="nav_name">打卡紀錄</span> </a>
                        <a href="@Url.Action("TripRecords")" class="nav_link  @(Context.Request.Path == "/AttendanceManagement/TripRecords" ? "active" : "")"> <i class='bi-briefcase'></i> <span class="nav_name">公出管理</span> </a>
                        <a href="@Url.Action("EmployeeData")" class="nav_link @(Context.Request.Path == "/AttendanceManagement/EmployeeData" ? "active" : "")"> <i class='bi-person-square'></i> <span class="nav_name">員工管理</span> </a>
                        <a href="@Url.Action("Setting")" class="nav_link @(Context.Request.Path == "/AttendanceManagement/Setting" ? "active" : "")"> <i class='bi-gear-fill'></i> <span class="nav_name">系統設定</span> </a>
                        <a href="@Url.Action("DataExport")" class="nav_link @(Context.Request.Path == "/AttendanceManagement/DataExport" ? "active" : "")"> <i class='bi-file-earmark-arrow-down-fill'></i> <span class="nav_name">資料匯出</span> </a>
                    </div>
                </div> <a href="#" class="nav_link"> <i class='bi-power'></i> <span class="nav_name">登出</span> </a>
            </nav>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - 人事差勤系統</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
