
@{
    ViewBag.Title = "修改員工資料";
}

<div class="main-content">
    <section class="section">
        <h1 class="section-header">
            <div>修改員工資料</div>
        </h1>

        <div class="d-flex bd-highlight mb-3">
            <div class="p-2 bd-highlight">
                <div class="p-2 flex-fill bd-highlight">
                    <div class="search-element">
                        <button class="btn btn-warning" type="submit"><i class="bi-trash-fill"></i>清除設備ID</button>
                    </div>
                </div>
            </div>
            <div class="p-2 bd-highlight">
                <div class="p-lg-2 flex-fill bd-highlight">
                    <div class="search-element">
                        <button class="btn btn-danger" type="submit"><i class="bi-power"></i>停用/恢復</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row" style="margin-bottom:20px">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <label for="#">員工姓名</label>
                                    <input id="#" type="email" class="form-control" name="#" tabindex="1" placeholder="請輸入員工姓名" required autofocus>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <label for="#">電話</label>
                                    <input id="#" type="email" class="form-control" name="#" tabindex="1" placeholder="請輸入電話" required autofocus>
                                </div>
                            </div>

                            <div class="row" style="margin-bottom:20px">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <label for="#">驗證碼(phone code)</label>
                                    <input id="#" type="email" class="form-control" name="#" tabindex="1" placeholder="請輸入驗證碼" required autofocus>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <label for="#">Email</label>
                                    <input id="#" type="email" class="form-control" name="#" tabindex="1" placeholder="請輸入Email帳號" required autofocus>
                                </div>
                            </div>

                            <div class="row" style="margin-bottom:20px">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <label for="#">職稱</label>
                                    <select class="form-control" type="text" placeholder="Search" aria-label="Search">
                                        <option>請選擇職稱</option>
                                        <option>#</option>
                                    </select>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <label for="#">部門</label>
                                    <select class="form-control" type="text" placeholder="Search" aria-label="Search">
                                        <option>請選擇部門</option>
                                        <option>#</option>
                                    </select>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center flex-row bd-highlight">
                                <div class="p-2 flex-fill bd-highlight">
                                    <button class="btn btn-success" type="submit">更新</button>
                                </div>
                                <div class="p-2 flex-fill bd-highlight">
                                    <button class="btn btn-primary" onclick="javascript:window.history.go(-1);" type="submit"><i class="bi-box-arrow-in-left"></i>返回</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
