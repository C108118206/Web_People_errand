
@{
    ViewBag.Title = "審核公出申請";
}

<div class="main-content">
    <section class="section">
        <div class="d-flex justify-content-end flex-row bd-highlight">
            <div class="p-2 flex-fill bd-highlight">
                <button class="btn btn-primary" onclick="javascript:window.history.go(-1);" type="submit"><i class="bi-box-arrow-in-left"></i>返回</button>
            </div>
        </div>

        <h1 class="section-header">
            <div>審核公出申請</div>
        </h1>

        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row" style="margin-bottom:20px">
                                <div class="col-lg-auto col-md-6 col-12">
                                    <label for="#">申請人：</label>
                                    <a href="#">王大明</a>
                                </div>
                                <div class="col-lg-auto col-md-6 col-12">
                                    <label for="#">核准人：</label>
                                    <a href="#">王大明</a>
                                </div>
                            </div>

                            <div class="row" style="margin-bottom:20px">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <label for="#">開始時間</label>
                                    <input id="#" type="datetime-local" class="form-control" name="#">
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <label for="#">結束時間</label>
                                    <input id="#" type="datetime-local" class="form-control" name="#">
                                </div>
                            </div>


                            <div class="row" style="margin-top: 20px ; margin-bottom:20px">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <label for="#">地點</label>
                                    <input id="#" type="email" class="form-control" name="#" tabindex="1" placeholder="請輸入公出地點" required autofocus disabled="disabled">
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <label for="#">申請時間</label>
                                    <input id="#" type="email" class="form-control" name="#" tabindex="1" value="2021-06-20 16:37" required autofocus disabled="disabled">
                                </div>
                            </div>

                            <div class="row" style="margin-bottom:20px">
                                <div class="col-lg-12 col-md-12 col-12">
                                    <label for="#">備註</label>
                                    <textarea name="#" class="form-control"> </textarea>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center flex-row bd-highlight">
                                <div class="p-2 flex-fill bd-highlight">
                                    <button class="btn btn-danger" type="submit">拒絕</button>
                                </div>
                                <div class="p-2 flex-fill bd-highlight">
                                    <button class="btn btn-success" type="submit">核准</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

