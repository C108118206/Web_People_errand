
@{
    ViewBag.Title = "修改公出申請";
    List<AttendanceManagement.Models.TripRecord> tripRecords = ViewBag.pass_tripRecord; //待審核資料
    int num = ViewBag.Num;
}

<div class="main-content">
    <section class="section">
        <h1 class="section-header">
            <div>修改公出申請</div>
        </h1>
        @using (Html.BeginForm("EditTripRecord", "TripRecords", new { num=num,id = tripRecords[num].TripRecordId }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="section-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row" style="margin-bottom:20px">
                                    <div class="col-lg-auto col-md-6 col-12">
                                        <label for="#">申請人：</label>
                                        <a href="/EmployeeData/SearchEmployee?department=請選擇部門&jobtitle=請選擇職稱&employee_name=@tripRecords[num].Name">@tripRecords[num].Name</a>
                                    </div>
                                    @*
                                    <div class="col-lg-auto col-md-6 col-12">
                                        <label for="#">核准人：</label>
                                        <a href="#">王大明</a>
                                    </div>
                                    *@
                                </div>

                                <div class="row" style="margin-bottom:20px">
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <label for="#">開始時間</label>
                                        <input id="startdate" name="startdate" type="datetime-local" class="form-control" value=@tripRecords[num].StartDate.ToString("yyyy-MM-ddTHH:mm:ss") >
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <label for="#">結束時間</label>
                                        <input id="enddate" type="datetime-local" class="form-control" name="enddate" value=@tripRecords[num].EndDate.ToString("yyyy-MM-ddTHH:mm:ss")  >
                                    </div>
                                </div>

                                <div class="row" style="margin-top: 20px ; margin-bottom:20px">
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <label for="#">地點</label>
                                        <input id="location" type="text" class="form-control" name="location" value=@tripRecords[num].Location tabindex="1" placeholder="請輸入公出地點" required autofocus >
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <label for="#">申請時間</label>
                                        <input id="#" type="datetime-local" class="form-control" name="#" tabindex="1" value=@tripRecords[num].CreatedTime.ToString("yyyy-MM-ddTHH:mm:ss") required autofocus disabled="disabled">
                                    </div>
                                </div>

                                <div class="row" style="margin-bottom:20px">
                                    <div class="col-lg-12 col-md-12 col-12">
                                        <label for="#">審核結果</label>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12">
                                        @if (tripRecords[num].Review == true)
                                        {
                                            <input type="radio" class="btn-check" name="review" id="review" value=true autocomplete="off" checked>
                                        }
                                        else
                                        {
                                            <input type="radio" class="btn-check" name="review" id="review" value=true autocomplete="off" >
                                        }
                                        <label class="btn btn-success" for="option1">核准</label>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12">
                                        @if (tripRecords[num].Review == false)
                                        {
                                          <input type="radio" class="btn-check" name="review" id="review" value=false autocomplete="off" checked>
                                        }
                                        else
                                        {
                                          <input type="radio" class="btn-check" name="review" id="review" value=false autocomplete="off" >
                                        }
                                        <label class="btn btn-danger" for="option2">拒絕</label>
                                    </div>
                                </div>

                                <div class="row" style="margin-bottom:20px">
                                    <div class="col-lg-12 col-md-12 col-12">
                                        <label for="#">備註</label>
                                        <textarea id="reason" name="reason" class="form-control" >@tripRecords[num].Reason </textarea>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center flex-row bd-highlight">
                                    <div class="p-2 flex-fill bd-highlight">
                                        <button class="btn btn-success" id="Button" name="Button" value="RenewButton" type="submit">更新</button>
                                    </div>
                                    <div class="p-2 flex-fill bd-highlight">
                                        <button class="btn btn-primary" id="Button" name="Button" value="BackButton" onclick="javascript:window.history.go(-1);" type="submit"><i class="bi-box-arrow-in-left"></i>返回</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        </section>
</div>




