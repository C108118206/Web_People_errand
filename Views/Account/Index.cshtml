@using (Html.BeginForm("CompanyLogin", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="card2 card-primary" style="width:350px;margin-left:-15px;">
    <div class="card-header" style="padding-bottom:0px;margin-top:5px"><p style="margin-bottom:15px">Sign in to Punch</p></div>
    @*<div class="card-header"><p>Sign in to Punch</p></div>*@

    <div class="card-body" style="padding-top:15px;padding-bottom:15px">
        <form method="POST" action="#" class="needs-validation" novalidate="">
            <div class="form-group">
                <input id="code" name="code" type="text" class="form-control" placeholder="請輸入公司ID" tabindex="1" maxlength="30" required autofocus>
            </div>
            <div class="form-group">
                <input id="emaillogin" name="email" type="email" class="form-control" placeholder="請輸入管理員信箱" tabindex="1" autofocus>
            </div>
            <div class="form-group">
                <input id="manager_password" name="manager_password" type="password" class="form-control" placeholder="請輸入管理員密碼" tabindex="1" maxlength="30" required autofocus>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block" tabindex="4" style="background-image: linear-gradient(to top, #09203f 0%, #537895 100%); opacity: 40%; border: 1px solid #ABB7C3">
                    Login
                </button>
            </div>
            <div class="form-group" style="margin-bottom:10px;margin-left:5px">
                <nobr id="companyhello" ><a href="/ForgetPassword/Index" id="companyhello" style="font-size:14px">忘記密碼?</a></nobr>
            </div>
        </form>
    </div>
</div>
}

