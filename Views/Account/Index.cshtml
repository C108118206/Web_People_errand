
@{
    ViewBag.Title = "登入";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="login-brand">
    <span class="nav_logo-name2">&nbsp;</span>
</div>

@using (Html.BeginForm("CompanyLogin", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card2 card-primary">
        <div class="card-header"><p>Sign in to Punch</p></div>

        <div class="card-body">
            <form method="POST" action="#" class="needs-validation" novalidate="">
                <div class="form-group">
                    <label for="email">公司ID</label>
                    <input id="code" name="code" type="text" class="form-control"  placeholder="請輸入公司ID" tabindex="1" required autofocus>
                </div>
                <div class="form-group">
                    <label for="email">管理員密碼</label>
                    <input id="manager_password" name="manager_password" type="password" class="form-control"  placeholder="請輸入管理員密碼" tabindex="1" required autofocus>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" tabindex="4">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
}

